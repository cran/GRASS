GRASS_INCLUDEDIR = $(GRASS_HOME_DIR)/include 

PKG_CPPFLAGS = -I$(GRASS_INCLUDEDIR) -I$(GRASS_SRC_INC_DIR)

GRASS_LIBESDIR = $(GRASS_HOME_DIR)/lib

LDFLAGS = -L$(GRASS_LIBESDIR)

PKG_LIBS = -lgis
 
SOURCES = gmeta.c gmeta.access.c R_G_init.c rastget.c rastput.c rasteri.c

HEADERS = grassR.h

OBJS = gmeta.o gmeta.access.o R_G_init.o rastget.o rastput.o rasteri.o

SHLIB = grassR.so




$(SHLIB): $(OBJS)
	$(SHLIB_LINK) -o $@ $(OBJS) $(ALL_LIBS)

gmeta.o: gmeta.c $(HEADERS)
gmeta.access.o: gmeta.access.c $(HEADERS)
R_G_init.o: R_G_init.c $(HEADERS)
rastget.o: rastget.c $(HEADERS)
rastput.o: rastput.c $(HEADERS)
rasteri.o: rasteri.c $(HEADERS)

clean:
	rm -f *.o *.so

